<h1>My Portfolio</h1>

<div class='search-area'>
  <h4>Search Stocks:</h4>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-6 no-right-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", 
                            autofocus: true, class: "form-control form-control" %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-secondary" do %>
          <%= fa_icon 'search' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results">

</div>
<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% end %>