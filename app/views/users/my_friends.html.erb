<h1>My Friends</h1>

<div class='search-area'>
  <h4>Search for Friends:</h4>
  <%= form_tag search_friend_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-6 no-right-padding">
        <%= text_field_tag :friend, params[:friend], placeholder: "Name or Email", 
                            autofocus: true, class: "form-control form-control" %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-secondary" do %>
          <%= fa_icon 'users' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results">

</div>
<% if !@friends.empty? %>
  <%= render 'friendships/list' %>
<% end %>